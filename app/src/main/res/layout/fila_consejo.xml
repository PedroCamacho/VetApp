<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:padding="5dp"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        card_view:cardBackgroundColor="#F8BBD0"
        android:elevation="18dp"
        card_view:cardCornerRadius="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgrecycler"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/analisis"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="4dp"/>

            <TextView
                android:id="@+id/viewdescripcionconsejo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/viewtituloconsejo"
                android:layout_toRightOf="@+id/imgrecycler"
                android:layout_toEndOf="@+id/imgrecycler"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/viewtituloconsejo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/primary_text"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/imgrecycler"
                android:layout_toEndOf="@+id/imgrecycler" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
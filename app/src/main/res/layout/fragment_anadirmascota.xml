<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.AnadirmascotaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/textViewCorreo"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/textViewCorreo"
                android:layout_toRightOf="@+id/textViewCorreo"
                app:srcCompat="@drawable/logopata" />

            <TextView
                android:id="@+id/textViewCorreo"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="67dp"
                android:layout_marginTop="26dp"
                android:text="AÃ±adir mascota"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/editNombre"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewCorreo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="59dp"
                android:ems="10"
                android:hint="Nombre mascota"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editRaza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/editNombre"
                android:layout_alignLeft="@+id/editNombre"
                android:layout_alignRight="@+id/editNombre"
                android:layout_alignStart="@+id/editNombre"
                android:layout_below="@+id/editEspecie"
                android:ems="10"
                android:hint="Raza"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/editRaza"
                android:layout_alignLeft="@+id/editRaza"
                android:layout_alignRight="@+id/editRaza"
                android:layout_alignStart="@+id/editRaza"
                android:layout_below="@+id/editRaza"
                android:ems="10"
                android:hint="Fecha nacimiento dd/mm/aaaa"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/editEdad"
                android:layout_alignLeft="@+id/editEdad"
                android:layout_alignRight="@+id/editEdad"
                android:layout_alignStart="@+id/editEdad"
                android:layout_below="@+id/editEdad"
                android:ems="10"
                android:hint="Sexo"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/buttonAnMas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/editSexo"
                android:layout_alignLeft="@+id/editSexo"
                android:layout_alignRight="@+id/editSexo"
                android:layout_alignStart="@+id/editSexo"
                android:layout_below="@+id/editSexo"
                android:background="@drawable/boton_amarillo"
                android:text="Guardar Mascota"
                android:textColor="@color/icons" />

            <EditText
                android:id="@+id/editEspecie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/editNombre"
                android:layout_alignLeft="@+id/editRaza"
                android:layout_alignRight="@+id/editNombre"
                android:layout_alignStart="@+id/editRaza"
                android:layout_below="@+id/editNombre"
                android:ems="10"
                android:hint="Especie"
                android:inputType="textPersonName" />

        </RelativeLayout>
    </ScrollView>


</FrameLayout>

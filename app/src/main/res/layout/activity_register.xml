<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vett.cryst.vetapp.LoginActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <EditText
        android:id="@+id/txtccorreo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Dirección de correo"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txtccontrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtccorreo"
        android:layout_alignLeft="@+id/txtccorreo"
        android:layout_alignRight="@+id/txtccorreo"
        android:layout_alignStart="@+id/txtccorreo"
        android:layout_below="@+id/txtccorreo"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textWebPassword" />

    <EditText
        android:id="@+id/txtrepcontrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtccontrasena"
        android:layout_alignLeft="@+id/txtccontrasena"
        android:layout_alignRight="@+id/txtccontrasena"
        android:layout_alignStart="@+id/txtccontrasena"
        android:layout_below="@+id/txtccontrasena"
        android:ems="10"
        android:hint="Repetir Contraseña"
        android:inputType="textPassword"
        android:singleLine="false" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_amarillo"
        android:text="Iniciar"
        android:textColor="@color/icons"
        android:layout_below="@+id/txtrepcontrasena"
        android:layout_alignRight="@+id/txtrepcontrasena"
        android:layout_alignEnd="@+id/txtrepcontrasena"
        android:layout_alignLeft="@+id/txtrepcontrasena"
        android:layout_alignStart="@+id/txtrepcontrasena" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="107dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="43dp"
        app:srcCompat="@drawable/logopata"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/logopata"
        android:layout_below="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="43dp"
        app:srcCompat="@drawable/logopata"
        android:layout_below="@+id/imageView3"
        android:layout_toLeftOf="@+id/imageView5"
        android:layout_toStartOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/logopata"
        android:layout_below="@+id/imageView4"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />


</RelativeLayout>
